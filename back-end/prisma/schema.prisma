generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(dbgenerated("substring(md5(random()::text), 1, 6)"))
  username     String @unique
  email        String @unique
  password     String
  refreshToken String
}

model Link {
  id           Int            @id @default(autoincrement())
  shortId      String         @unique
  createdAt    DateTime       @default(now())
  redirects    Redirect[]
  visitHistory VisitHistory[]
}

model Redirect {
  id        Int      @id @default(autoincrement())
  url       String
  startTime DateTime
  endTime   DateTime
  linkId    Int
  link      Link     @relation(fields: [linkId], references: [id])
}

model VisitHistory {
  id         Int      @id @default(autoincrement())
  timestamp  DateTime @default(now())
  ipAddress  String
  deviceInfo String
  linkId     Int
  link       Link     @relation(fields: [linkId], references: [id])
}
